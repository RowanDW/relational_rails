<%= link_to "Farms Index", "/farms" %>
<%= link_to "Crops Index", "/crops" %>
<%= link_to "Ranches Index", "/ranches" %>
<%= link_to "Cows Index", "/cows" %>

<h1><%= @ranch.name %></h1>

<% @cows.each do |cow| %>
  <h1>Name: <%= cow.name %></h1>
  <p>Age: <%= cow.age %></p>
  <p>Grass fed?: <%= cow.grass_fed %></p>
  <p>Ranch id: <%= cow.ranch_id %></p>
  <p>Created at: <%= cow.created_at %></p>
  <p>Updated at: <%= cow.updated_at %></p>
  <p><%= button_to "Edit #{cow.name}", "/cows/#{cow.id}/edit", method: :get %></p>
<% end %>

<%= link_to "New Cow", "/ranches/#{@ranch.id}/cows/new" %>
<%= link_to "Sort Cows", "/ranches/#{@ranch.id}/cows?sorted=true" %>

<%= form_with url: "/ranches/#{@ranch.id}/cows", method: :get, local: true do |form| %>
  <%= form.label :age_threshold %>
  <%= form.text_field :age_threshold %>

  <%= form.submit 'Only return cows older than input age' %>
<% end %>
